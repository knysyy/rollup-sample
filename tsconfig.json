{
    "compilerOptions": {
        "allowJs": true,
        "target": "es5",
        "module": "esnext",
        "lib": [
            "dom",
            "ES5",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "typeRoots": ["types", "node_modules/@types"]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
